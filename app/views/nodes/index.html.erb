<p id="notice"><%= notice %></p>

<h1>Listing Nodes</h1>

<% if @nodes.any? %>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Game</th>
    <th>Player</th>
    <th>Data</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @nodes.each do |node| %>
      <tr>
        <td><%= node.id %></td>
        <td><%= link_to node.game_id, node.game %></td>
        <td><%= link_to node.player_id, node.player.code %></td>
        <td><%= node.data.truncate 50 %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% else %>
    <b>No nodes on server</b>
<% end %>

<br>

<%= link_to 'New Node', new_node_path %>
